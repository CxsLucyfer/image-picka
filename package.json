{
  "title": "Image Picka",
  "name": "image-picka",
  "version": "0.12.3",
  "description": "An image picker written in webextensions",
  "author": "eight04 <eight04@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "scripts": {
    "lint": "eslint \"**/*.js\" --cache",
    "test": "npm run lint && npm run build && web-ext lint",
    "start": "web-ext run",
    "build": "sync-version src/static/manifest.json && shx rm -rf build/* && rollup -c",
    "build-locales": "tx pull -a --mode=developer && webext-tx-fix -s src/static",
    "build-release": "npm run build && shx rm -rf web-ext-artifacts/* && web-ext build",
    "version": "echo Use release && exit 1",
    "server": "node test/server.js",
    "release": "release-it",
    "changelog": "shx cat README.md | mkcat | mkql \"[content=Changelog] + ul > :first-child > *\" | mkout"
  },
  "eslintIgnore": [
    "build"
  ],
  "devDependencies": {
    "@eight04/idb-storage": "^0.4.2",
    "content-disposition": "^0.5.3",
    "eslint": "^7.4.0",
    "expression-eval": "^3.1.2",
    "mime": "^2.4.6",
    "mkdoc": "^1.0.49",
    "node-sigint": "0.0.1",
    "release-it": "^13.6.5",
    "rollup": "^2.21.0",
    "rollup-plugin-cjs-es": "^1.0.0",
    "rollup-plugin-copy-glob": "^0.3.1",
    "rollup-plugin-iife": "^0.3.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-shim": "^1.0.0",
    "rollup-plugin-terser": "^6.1.0",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "stream-throttle": "^0.1.3",
    "sync-version": "^1.0.1",
    "tiny-glob": "^0.2.6",
    "web-ext": "^4.3.0",
    "webext-menus": "^0.3.2",
    "webext-pref": "^0.6.0",
    "webext-pref-ui": "^0.1.1",
    "webext-tx-fix": "^0.3.3",
    "webextension-polyfill": "^0.6.0"
  },
  "repository": "eight04/image-picka",
  "private": true,
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "web-ext-artifacts/*"
      ]
    },
    "git": {
      "changelog": "npm run changelog --silent",
      "addUntrackedFiles": true,
      "push": false
    },
    "hooks": {
      "init": "npm test",
      "after:bump": "npm run build-release",
      "after:git:release": "git push --follow-tags"
    }
  }
}
